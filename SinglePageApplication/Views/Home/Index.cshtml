@model List<ShareMockups.DomainClasses.TrainingProduct>

@{
    ViewBag.Title = "Single Page Application and MVVM Techiques";
}

@using (Html.BeginForm())
{
    <!-- BEGIN HIDDEN FIELDS AREA -->
    <!-- END HIDDEN FIELDS AREA -->

    <!-- BEGIN SEARCH AREA -->
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title"> Search For Products</h1>
            <div class="panel-body">
                <div class="form-group">
                    @Html.Label("Product Name")
                    @Html.TextBox("SearchProductName", "", new { @class = "form-control" })
                </div>
                <div class="panel-footer">
                    <button id="btnSearch" class="btn btn-sm btn-primary">Search</button>
                    <button id="btnReset" class="btn btn-sm btn-primary">Reset</button>
                </div>
            </div>
        </div>
    </div>
    <!-- END SEARCH AREA -->

    <!-- BEGIN LIST AREA -->
    <div class="table-responsive">
        <table class="table table-condensed table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="pdsa-action-button-column">Edit</th>
                    <th>Product Name</th>
                    <th>Introduction Date</th>
                    <th>Url</th>
                    <th>Price</th>
                    <th class="pdsa-action-button-column">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td class="pdsa-action-button-column">
                            <a href="#" data-pdsa-action="edit"
                               data-pdsa-val="@item.ProductId" @*it'll take the ProductId and put into that property or data-*@
                               class="btn btn-default btn-sm">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.IntroductionDate</td>
                        <td>@item.Url</td>
                        <td>@item.Price.ToString("c")</td>
                        <td class="pdsa-action-button-column">
                            <a href="#" data-pdsa-action="delete"
                               data-pdsa-val="@item.ProductId" @*it'll take the ProductId and put into that property or data-*@
                               onclick="return confirm('Delete this Product?');"
                               class="btn btn-default btn-sm">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- END LIST AREA -->

}

@section scripts
{
    <script>

    </script>
}